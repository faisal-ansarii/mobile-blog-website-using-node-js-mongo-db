<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 text-light fw-bold">Submit Your Blog</h1>
  <div class="col-lg-6 mx-auto">
    <p class="text-light lead">Share your amazing blog on mobile accross the world. Fill our form to get started.</p>
  </div>
</div>

<div class="row bg-light p-5 justify-content-center">

  <% if(infoSubmitObj != '') { %>
    <div class="col-8 alert alert-success" role="alert">
      <%= infoSubmitObj %> 
    </div>
  <% } %>

  <% if(infoErrorsObj != '') { %>
    <div class="col-8 alert alert-danger" role="alert">
      <%= infoErrorsObj[0].message %>
    </div>
  <% } %>

  <div class="col-8">

    <form action="/submit-blog" enctype="multipart/form-data" method="POST">
    
      <div class="row g-3 text-black">

        <div class="col-12">
          <label for="name" class="form-label">Mobile Name</label>
          <input type="text" name="name" id="name" class="form-control" required>
        </div>
        
        <div class="col-12">
          <label for="description" class="form-label">Description</label>
          <textarea name="description" id="description" class="form-control" cols="30" rows="4"></textarea>
        </div>

        <div class="col-12">
          <label for="name" class="form-label">Specification</label><br>
          <small>Example: Motherboard Camera Battery Storage</small>
          <div class="specList">
            <div class="specDiv mb-1">
              <input type="text" name="specification" class="form-control">
            </div>
          </div>
        </div>

        <div class="col-12">
          <button type="button" class="btn btn-outline-success" id="addSpecsBtn">+ Specification</button>
        </div>

        <div class="col-12">
          <label for="category">Select Category</label>
          <select class="form-select form-control" name="category" aria-label="Category">
            <option selected>Select Category</option>
            <option value="Samsung">Samsung</option>
            <option value="Mi">Xiaomi</option>
            <option value="Apple">Apple</option>
            <option value="Oppo">oppo</option>
            <option value="Vivo">Vivo</option>
            <option value="Realme">Realme</option>
          </select>
        </div>

        <div class="col-12">
          <label for="image">Phone Image</label>
          <input type="file" class="form-control" name="image" accept="image/*">
        </div>

        <div class="col-12">
          <button type="submit" class="btn text-dark btn-outline-warning">Submit Blog</button>
        </div>

      </div>
    
    </form>

  </div>
</div>