	<% if(phone != null ) { %>

	<nav aria-label="breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a class="text-light" href="/">Home</a></li>
		<li class="breadcrumb-item active text-light" aria-current="page"><%- phone.name %></li>
	</ol>
	</nav>


	<div class="row">

	<div class="col-12 col-md-4">
		<img src="/uploads/<%- phone.image %>" class="img-fluid rounded sticky-top" style="top: 20px;" alt="<%- phone.name %>" loading="lazy">
	</div>

	<div class="col-12 col-md-8">
		<div class="row">
		<div class="text-light col-12"><h1><%- phone.name %></h1></div>
		<div class="text-light col-12 mb-4"><i class="bi bi-tag"></i> <%- phone.category %></div>
		<div class="text-light col-12" style="white-space: pre-line;">
			<h4>Mobile Introduction</h4>
			<%- phone.description %>
		</div>
		</div>

		<div class="row  pt-4">
		<div class=" text-light col-12">
			<h4>Specification</h4>
			<ul class="list-group list-group-flush">
			<% phone.specification.forEach(function(specification, index){ %>
				<li class="list-group-item"><%= specification %></li>
			<% }) %>
			</ul> 
		</div>
		</div>
	</div>
	</div>
	<% } else { %>
	<p class="text-light">No item found.</p>
<% } %>